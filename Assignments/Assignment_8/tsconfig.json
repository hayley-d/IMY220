{
  "compilerOptions": {
    "target": "es5",
    "module": "es6",
    "skipLibCheck":true,
    "esModuleInterop": true,    
    "strict": true,
    "outDir": "./dist/",       
    "sourceMap": true,       
    "strictNullChecks": true,
    "jsx": "react",    
    "allowJs": true,
    "typeRoots": [
        "./node_modules/@types"
    ]
  },
  "include":["**/*"],
  "exclude":["node_modules","dist"]
}
